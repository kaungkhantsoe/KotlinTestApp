<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_margin="@dimen/margin_normal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.yammobots.holidaytestapp.custom_control.MyanTextView
                android:text="Album Id: "
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <com.yammobots.holidaytestapp.custom_control.MyanTextView
                android:id="@+id/tv_album_id"
                android:textColor="@color/colorTextColorPrimary"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_normal"
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.yammobots.holidaytestapp.custom_control.MyanTextView
                android:text="Id: "
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <com.yammobots.holidaytestapp.custom_control.MyanTextView
                android:id="@+id/tv_id"
                android:textColor="@color/colorTextColorPrimary"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_normal"
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.yammobots.holidaytestapp.custom_control.MyanTextView
                android:text="Title: "
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <com.yammobots.holidaytestapp.custom_control.MyanTextView
                android:id="@+id/tv_title"
                android:textColor="@color/colorTextColorPrimary"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_sample"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="Constructors sample"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
